{
  "name": "widgetly",
  "version": "6.0.3",
  "description": "Library helps you to create iframe-widgets",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rm -rf lib && cp -r src lib",
    "build": "babel src --out-dir lib",
    "lint": "eslint '**/*.js'",
    "format": "prettier --write '**/*.js' && eslint '**/*.js' --fix",
    "size": "npm run build && size-limit",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "postpublish": "rm -rf lib && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.rambler.ru:s.pereskokov/widgetly.git"
  },
  "author": "Sergey Pereskokov s.pereskokov@rambler-co.ru",
  "license": "ISC",
  "dependencies": {
    "domready": "^1.0.8",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "magic-transport": "^2.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^4.19.1",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.12.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.14.3",
    "size-limit": "^1.3.8"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
